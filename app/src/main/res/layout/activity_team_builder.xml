<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center"
    android:textAlignment="center"
    tools:context=".ui.TeamBuilder">

    <EditText
        android:id="@+id/teamBuilderTeamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:hint="@string/team_name"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/teamBuilderSlots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamBuilderTeamName">

        <ImageButton
            android:id="@+id/teamBuilderButtonSlot1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#AFA2A2"
            android:cropToPadding="true"
            android:enabled="true"
            android:padding="50dp"
            android:src="@drawable/plusicon" />

        <ImageButton
            android:id="@+id/teamBuilderButtonSlot2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#AFA2A2"
            android:cropToPadding="true"
            android:enabled="true"
            android:padding="50dp"
            android:src="@drawable/plusicon" />

        <ImageButton
            android:id="@+id/teamBuilderButtonSlot3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#AFA2A2"
            android:cropToPadding="true"
            android:enabled="true"
            android:padding="50dp"
            android:src="@drawable/plusicon"/>

        <ImageButton
            android:id="@+id/teamBuilderButtonSlot4"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#AFA2A2"
            android:cropToPadding="true"
            android:enabled="true"
            android:padding="50dp"
            android:src="@drawable/plusicon"/>

        <ImageButton
            android:id="@+id/teamBuilderButtonSlot5"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#AFA2A2"
            android:cropToPadding="true"
            android:enabled="true"
            android:padding="50dp"
            android:src="@drawable/plusicon"/>

        <ImageButton
            android:id="@+id/teamBuilderButtonSlot6"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#AFA2A2"
            android:cropToPadding="true"
            android:enabled="true"
            android:padding="50dp"
            android:src="@drawable/plusicon" />

    </GridLayout>

    <Button
        android:id="@+id/teamBuilderButtonSaveTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamBuilderSlots"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/save_team"
        android:textSize="25sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
